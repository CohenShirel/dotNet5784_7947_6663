<Window x:Class="PL.Manager.GanntWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Manager"
        mc:Ignorable="d"
        Title="GanntWindow" Height="600" Width="800">
    <Grid>
        <!-- DataGrid to display tasks and their dates -->
        <!-- Color Key for Gantt Chart -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Rectangle Width="20" Height="20" Fill="LightBlue" Margin="5"/>
            <TextBlock Text="Task Completed" VerticalAlignment="Center"/>
            <Rectangle Width="20" Height="20" Fill="Red" Margin="5"/>
            <TextBlock Text="Task Delayed" VerticalAlignment="Center"/>
            <Rectangle Width="20" Height="20" Fill="Yellow" Margin="5"/>
            <TextBlock Text="Task Not Started" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
